<h1>New Entry</h1>

<form action="/entries" method="post">
  <input type="hidden" name="place_id" value="<%= params["place_id"] %>">

  <div class="mb-3">
    <label class="form-label" for="title_input">Title</label>
    <input class="form-control" type="text" name="title" id="title_input">
  </div>

  <div class="mb-3">
    <label class="form-label" for="description_input">Description</label>
    <input class="form-control" type="text" name="description" id="description_input">
  </div>

  <div class="mb-3">
    <label class="form-label" for="occurred_on_input">Occurred On</label>
    <input class="form-control" type="date" name="occurred_on" id="occurred_on_input">
  </div>

  <button class="btn btn-primary">Save</button>
   <a href="/places/<%= @place["id"] %>" class="btn btn-primary">Cancel</a>
  
</form>