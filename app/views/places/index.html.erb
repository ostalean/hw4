<h1>Places</h1>

<div class="container">
  <div class="row">
    <% for place in @places %>
      <div class="col-lg-6 col-md-8 col-sm-10 mx-auto mb-3">
        <div class="card">
          <div class="card-body">
            <a href="/places/<%= place["id"] %>" class="text-decoration-none text-dark">
              <h5 class="card-title"><%= place["name"] %></h5>
            </a>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if session["user_id"] %>
    <div class="mt-3">
      <a href="/places/new" class="btn btn-secondary">New Place</a>
    </div>
  <% end %>
</div>

