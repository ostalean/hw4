<h1><%= @place["name"] %></h1>

<h2>My Entries</h2>

<div class="container">
  <div class="row">
    <% for entry in @entries %>
      <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
        <div class="card">
          <div class="card-body">
             <h5 class="card-title mb-1"><%= entry["title"] %></h5>
             <% if entry.uploaded_image.attached? %>
              <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid mb-2" alt="<%= entry["title"] %>">
            <% elsif entry["image"].present? %>
              <img src="<%= entry["image"] %>" class="img-fluid mb-2" alt="<%= entry["title"] %>">
            <% end %>
            <p class="card-text"><%= entry["description"] %></p>
            <p class="text-muted" style="font-size: 0.8rem;"><%= entry["occurred_on"] %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% if session["user_id"] %>
  <p>
    <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-secondary">New Entry</a>
  </p>
<% end %>

<p>
  <a href="/places" class="btn btn-secondary">Back to All Places</a>
</p>
